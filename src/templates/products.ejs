<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/static/products.js" defer></script>
    <title>Document</title>
</head>
<body>
    <!-- Заголовок  -->
    <h1>products list: </h1>
    <!-- список -->
    <ul>
        <!-- испольхуем метод forEach который перебирает каждый елемент списка -->
        <% products.forEach((product) => {%>
            <!-- выводим переменную в html испоьзуя ejs код  -->
            <li>
                <div>   
                    <h1><%= product.name %></h1>
                    <img src="<%= product.img %>" width="200" height="200">
                    <p><%= product.description %></p>
                </div>
            </li>
           
        <%})%>
    </ul>
    <button id = "createProductButton">create product</button>
</body>
</html>