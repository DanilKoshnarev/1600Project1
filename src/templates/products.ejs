<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/static/products.js" defer></script>
    <title>Document</title>
</head>
<body>
    <h1>Products list <% if (category) { %>
      By category <%= category %>
    <% } %></h1>
    <ul>
        <% products.forEach((product) => {%>
            <li>
                <div>   
                    <h1><%= product.name %></h1>
                    <img src="<%= product.img %>" width="200" height="200">
                    <p><%= product.description %></p>
                </div>
            </li>
           
        <%})%>
    </ul>
    <button id = "createProductButton">create product</button>
</body>
</html>